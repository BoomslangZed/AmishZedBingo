<html>
<head>
  <title>Custom Bingo Generator</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }

    h1 {
      margin-top: 20px;
    }

    #bingo {
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      width: 600px;
      margin: 20px auto;
      border: 2px solid black;
    }

    .cell {
      border: 1px solid black;
      padding: 15px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      font-size: 14px;
    }

    button {
      padding: 10px 20px;
      margin: 10px;
      font-size: 16px;
      cursor: pointer;
    }

    @media print {
      button {
        display: none;
      }
    }
  </style>
</head>
<body>

<h1>Custom Bingo Card</h1>

<button onclick="generateCard()">Generate New Card</button>
<button onclick="window.print()">Print</button>

<div id="bingo"></div>

<script>
const phrases = [
  "MORNING F",
  "ISH TALKS ABOUT RUN CLUB",
  "Can you see my screen?",
  "Muted mic moment",
  "Mentions synergy",
  "Dog barking",
  "Internet lag",
  "Coffee sip",
  "Mentions deadline",
  "Someone multitasking",
  "Camera off",
  "Background noise",
  "Awkward silence",
  "Uses buzzword",
  "Talks over someone",
  "Mentions budget",
  "Says 'great question'",
  "Late joiner",
  "Echo feedback",
  "Mentions roadmap",
  "Random interruption",
  "Typing sounds",
  "Screen share fail",
  "Weather comment",
  "Someone frozen",
  "Mentions KPIs",
  "Says 'quick sync'",
  "Phone notification"
];

function generateCard() {
  const shuffled = phrases.sort(() => 0.5 - Math.random());
  const selected = shuffled.slice(0, 24);
  selected.splice(12, 0, "FREE");

  const board = document.getElementById("bingo");
  board.innerHTML = "";

  selected.forEach(text => {
    const cell = document.createElement("div");
    cell.className = "cell";
    cell.innerText = text;
    board.appendChild(cell);
  });
}

generateCard();
</script>

</body>
</html>
